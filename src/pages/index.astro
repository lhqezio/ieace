---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import Card from "../components/Card.astro";

const projects = [
	{
		title: "Siêu Dự Án Nam Phi",
		description:
			"IEACE ký kết triển khai Khu Nông Thị 180.000 tỷ VNĐ tại Nam Phi.",
		href: "/projects/south-africa-farm-city",
	},
	{
		title: "Điện Mặt Trời Viettel",
		description:
			"Hệ thống năng lượng mặt trời tối ưu hóa cho các trạm BTS của Viettel.",
		href: "/projects/viettel-solar",
	},
	{
		title: "Nghiên Cứu AI cùng HUST",
		description:
			"Hợp tác nghiên cứu ứng dụng trí tuệ nhân tạo trong lưới điện thông minh.",
		href: "/projects/hust-research",
	},
	{
		title: "Đào Tạo Giáo Dục Nghề",
		description:
			"Cung cấp thiết bị thực hành năng lượng tái tạo cho các trường dạy nghề.",
		href: "/projects/vocational-training",
	},
];

const partners = [
	"Viettel",
	"Panasonic",
	"Schneider",
	"Kyocera",
	"Mitsubishi",
	"Canon",
];
---

<Layout title="Viện Điện Tử Tự Động Hóa Năng Lượng Sạch">
	<Hero
		title="KHƠI NGUỒN CUỘC SỐNG"
		subtitle="Viện Điện Tử Tự Động Hóa Năng Lượng Sạch (IEACE) - Tiên phong trong nghiên cứu khoa học, ứng dụng công nghệ Automation và AI để kiến tạo tương lai năng lượng bền vững cho Việt Nam."
		primaryBtnText="DỰ ÁN CỦA CHÚNG TÔI"
		primaryBtnLink="/projects"
		secondaryBtnText="LIÊN HỆ VIỆN"
		secondaryBtnLink="/contact"
	/>

	<Section>
		<div class="mission-grid">
			<div class="mission-text">
				<h2 class="section-title">
					Sứ Mệnh <span class="text-accent">Tiên Phong</span>
				</h2>
				<p class="section-desc">
					Là đơn vị trực thuộc <strong>LHH Việt Nam</strong>, chúng
					tôi cam kết thúc đẩy chuyển đổi số và phát triển năng lượng
					xanh thông qua các giải pháp Tự động hóa và Trí tuệ nhân tạo
					(AI).
				</p>
				<div class="mission-stats mt-lg">
					<div class="stat-card">
						<span class="stat-num">50+</span>
						<span class="stat-label">Dự Án Quốc Tế</span>
					</div>
					<div class="stat-card">
						<span class="stat-num">100%</span>
						<span class="stat-label">Giải Pháp Tối Ưu</span>
					</div>
				</div>
			</div>
			<div class="mission-image-wrapper">
				<div class="mission-visual-container">
					<div class="mission-image">
						<img
							src="https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&q=80&w=800"
							alt="Công nghệ AI và Năng lượng"
						/>
						<div class="image-overlay"></div>
					</div>
					<div class="visual-deco-lines">
						<div class="deco-line"></div>
						<div class="deco-line"></div>
						<div class="deco-line"></div>
					</div>
				</div>
				<div class="experience-badge deluxe">
					<div class="badge-inner">
						<span class="badge-number">10+</span>
						<span class="badge-text">Năm kinh nghiệm</span>
					</div>
					<div class="badge-corner"></div>
				</div>
			</div>
		</div>
	</Section>

	<Section background="secondary">
		<div class="row text-center mb-lg">
			<h2 class="section-title">
				Tin Tức <span class="text-accent">Mới Nhất</span>
			</h2>
		</div>
		<div class="grid grid-3">
			{
				projects.map((project) => (
					<Card
						title={project.title}
						description={project.description}
						href={project.href}
						category="DỰ ÁN"
					/>
				))
			}
		</div>
		<div class="text-center mt-lg">
			<a href="/projects" class="btn btn-outline">Xem Tất Cả Tin Tức</a>
		</div>
	</Section>

	<Section>
		<div class="row text-center mb-lg">
			<h2 class="section-title">
				Đối Tác <span class="text-accent">Chiến Lược</span>
			</h2>
		</div>
		<div class="partners-grid">
			<div class="partner-logo">
				<img src="/images/partners/panasonic.svg" alt="Panasonic" />
			</div>
			<div class="partner-logo">
				<img
					src="/images/partners/schneider.svg"
					alt="Schneider Electric"
				/>
			</div>
			<div class="partner-logo">
				<img src="/images/partners/kyocera.svg" alt="Kyocera" />
			</div>
			<div class="partner-logo">
				<img src="/images/partners/viettel.svg" alt="Viettel" />
			</div>
			<div class="partner-logo">
				<img src="/images/partners/canon.svg" alt="Canon" />
			</div>
			<div class="partner-logo">
				<img src="/images/partners/mitsubishi.svg" alt="Mitsubishi" />
			</div>
			<div class="partner-logo">
				<img src="/images/partners/techco.svg" alt="Techco" />
			</div>
			<div class="partner-logo">
				<img src="/images/partners/nanotech.svg" alt="Nanotech" />
			</div>
		</div>
	</Section>
</Layout>

<style>
	.text-center {
		text-align: center;
	}
	.mb-lg {
		margin-bottom: var(--spacing-lg);
	}
	.mb-xl {
		margin-bottom: var(--spacing-xl);
	}
	.mt-lg {
		margin-top: var(--spacing-lg);
	}

	.section-title {
		font-size: 2.5rem;
		margin-bottom: var(--spacing-md);
	}

	.section-desc {
		font-size: 1.1rem;
		color: var(--color-text-muted);
		line-height: 1.6;
		margin-bottom: var(--spacing-md);
	}

	.mission-grid {
		display: grid;
		grid-template-columns: 1.2fr 1fr;
		gap: var(--spacing-xl);
		align-items: center;
	}

	@media (max-width: 900px) {
		.mission-grid {
			grid-template-columns: 1fr;
		}
	}

	.mission-image-wrapper {
		position: relative;
		padding: 20px;
	}

	.mission-image {
		border-radius: 12px;
		overflow: hidden;
		border: 1px solid var(--color-border);
		box-shadow: 0 30px 60px rgba(0, 0, 0, 0.1);
		position: relative;
		aspect-ratio: 4/3;
	}

	.image-overlay {
		position: absolute;
		inset: 0;
		background: linear-gradient(to top, rgba(0, 0, 0, 0.4), transparent);
	}

	.experience-badge.deluxe {
		position: absolute;
		bottom: 0;
		left: 0;
		background: var(--color-text);
		color: white;
		padding: 35px;
		border-radius: 4px;
		display: flex;
		flex-direction: column;
		align-items: center;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
		transform: translate(-10%, -10%);
		z-index: 2;
		border-left: 4px solid var(--color-accent-primary);
	}

	.badge-corner {
		position: absolute;
		top: 10px;
		right: 10px;
		width: 15px;
		height: 15px;
		border-top: 2px solid rgba(255, 255, 255, 0.2);
		border-right: 2px solid rgba(255, 255, 255, 0.2);
	}

	.mission-visual-container {
		position: relative;
	}

	.visual-deco-lines {
		position: absolute;
		top: -20px;
		right: -20px;
		width: 100px;
		height: 100px;
		z-index: -1;
	}

	.visual-deco-lines .deco-line {
		position: absolute;
		background: var(--color-accent-primary);
		opacity: 0.2;
	}

	.visual-deco-lines .deco-line:nth-child(1) {
		top: 0;
		right: 0;
		width: 100%;
		height: 2px;
	}
	.visual-deco-lines .deco-line:nth-child(2) {
		top: 0;
		right: 0;
		width: 2px;
		height: 100%;
	}
	.visual-deco-lines .deco-line:nth-child(3) {
		top: 20px;
		right: 20px;
		width: 60%;
		height: 60%;
		border: 1px solid var(--color-accent-primary);
		background: transparent;
	}

	.badge-number {
		font-size: 2.8rem;
		font-weight: 900;
		line-height: 1;
		margin-bottom: 5px;
		color: var(--color-accent-primary);
	}

	.badge-text {
		font-size: 0.75rem;
		text-transform: uppercase;
		font-weight: 700;
		letter-spacing: 0.15em;
		white-space: nowrap;
		opacity: 0.8;
	}

	.stat-card {
		background: var(--color-surface);
		border: 1px solid var(--color-border);
		padding: var(--spacing-lg);
		border-radius: 8px;
		flex: 1;
		transition:
			transform 0.3s ease,
			border-color 0.3s ease;
	}

	.stat-card:hover {
		transform: translateY(-5px);
		border-color: var(--color-accent-primary);
	}

	.stat-num {
		display: block;
		font-size: 2.5rem;
		font-weight: 800;
		color: var(--color-accent-primary);
	}

	.stat-label {
		font-size: 0.8rem;
		color: var(--color-text-muted);
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.partners-grid {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: var(--spacing-xl);
		align-items: center;
	}

	.partner-logo {
		width: 140px;
		height: 60px;
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0.6;
		transition: all 0.3s ease;
	}

	.partner-logo img {
		max-width: 100%;
		max-height: 100%;
		object-fit: contain;
	}

	.partner-logo:hover {
		filter: none;
		opacity: 1;
		transform: scale(1.05);
	}
</style>
