---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import Card from "../components/Card.astro";
import Mission from "../components/Mission.astro";
import ResearchPartners from "../components/ResearchPartners.astro";
import PartnerGrid from "../components/PartnerGrid.astro";
import NoticeBanner from "../components/NoticeBanner.astro";

const projects = [
	{
		title: "Cụm Năng Lượng Hòn Chuối",
		description:
			"Xử lý nước biển thành nước ngọt và cung cấp điện sinh hoạt độc lập.",
		href: "/projects/hon-chuoi-ca-mau",
	},
	{
		title: "Hybrid Gió - Mặt Trời Phú Cường",
		description:
			"Hệ thống năng lượng lai tạo cung cấp điện cho trạm sạc pin phương tiện.",
		href: "/projects/phu-cuong-hybrid",
	},
	{
		title: "Nghiên Cứu AI cùng HUST",
		description:
			"Hợp tác nghiên cứu ứng dụng trí tuệ nhân tạo trong lưới điện thông minh.",
		href: "/projects/hust-research",
	},
	{
		title: "Đào Tạo Giáo Dục Nghề",
		description:
			"Cung cấp thiết bị thực hành năng lượng tái tạo cho các trường dạy nghề.",
		href: "/projects/vocational-training",
	},
];

const researchPartners = [
	{
		name: "HUST",
		url: "https://hust.edu.vn",
		logo: "/images/partners/research/hust.png",
	},
	{
		name: "CEC China",
		url: "https://english.cec.org.cn/#/",
		logo: "/images/partners/research/cec.webp",
	},
	{
		name: "VIAEP",
		url: "https://viaep.org.vn",
		logo: "/images/partners/research/viaep.png",
	},
	{
		name: "VNUA",
		url: "https://vnua.edu.vn",
		logo: "/images/partners/research/vnua.png",
	},
];

const strategicPartners = [
	{ name: "Panasonic", logo: "/images/partners/panasonic.svg" },
	{ name: "Schneider Electric", logo: "/images/partners/schneider.svg" },
	{ name: "Kyocera", logo: "/images/partners/kyocera.svg" },
	{ name: "Viettel", logo: "/images/partners/viettel.svg" },
	{ name: "Canon", logo: "/images/partners/canon.svg" },
	{ name: "Mitsubishi", logo: "/images/partners/mitsubishi.svg" },
	{ name: "Techco", logo: "/images/partners/techco.svg" },
	{ name: "Nanotech", logo: "/images/partners/nanotech.svg" },
];
---

<Layout title="Viện Điện Tử Tự Động Hóa Năng Lượng Sạch">
	<Hero
		title="KHƠI NGUỒN CUỘC SỐNG"
		subtitle="Đơn vị nghiên cứu khoa học công nghệ thuộc Liên hiệp các Hội Khoa học Kỹ thuật Việt Nam (VUSTA). Tiên phong Chuyển đổi số - Năng lượng xanh - Tự động hóa - AI."
		primaryBtnText="DỰ ÁN CỦA CHÚNG TÔI"
		primaryBtnLink="/projects"
		secondaryBtnText="LIÊN HỆ VIỆN"
		secondaryBtnLink="/contact"
	/>

	<NoticeBanner
		badgeText="THÔNG BÁO"
		title="Đang Cập Nhật Hệ Thống"
		message="Chúng tôi đang thực hiện làm mới nhận diện thương hiệu và cập nhật hình ảnh dự án thực tế. Cảm ơn sự kiên nhẫn của quý vị."
		ctaText="LIÊN HỆ CHI TIẾT"
		ctaLink="/contact"
	/>

	<Section>
		<Mission
			title="Sứ Mệnh <span class='text-accent'>Tiên Phong</span>"
			description="IEACE là đơn vị tiên phong nghiên cứu khoa học, cam kết chuyển đổi số, phát triển năng lượng xanh ứng dụng công nghệ tự động hóa, IoT, AI để xây dựng nền nông nghiệp thông minh, xanh bền vững."
			stats={[
				{ value: "A-1128", label: "Bộ Khoa học và Công nghệ cấp" },
				{ value: "2013", label: "Năm Thành Lập" },
			]}
			experienceNumber="10+"
			experienceText="Năm phát triển"
		/>
	</Section>

	<Section background="secondary">
		<div class="row text-center mb-lg">
			<h2 class="section-title">
				Tin Tức <span class="text-accent">Mới Nhất</span>
			</h2>
			<div class="section-disclaimer">
				<p>
					* Chúng tôi đang trong quá trình làm lại nhận diện thương
					hiệu. Trang web đang được cập nhật với hình ảnh dự án thực
					tế. Cảm ơn sự kiên nhẫn của quý vị.
				</p>
				<a href="/contact" class="disclaimer-cta">LIÊN HỆ CHI TIẾT</a>
			</div>
		</div>
		<div class="grid grid-3">
			{
				projects
					.slice(0, 3)
					.map((project) => (
						<Card
							title={project.title}
							description={project.description}
							href={project.href}
							category="DỰ ÁN"
						/>
					))
			}
		</div>
		<div class="text-center mt-lg">
			<a href="/projects" class="btn btn-outline">Xem Tất Cả Tin Tức</a>
		</div>
	</Section>

	<Section>
		<ResearchPartners
			title="Đối Tác <span class='text-accent'>Nghiên Cứu & Phát Triển</span>"
			description="Hợp tác với các trường đại học, viện nghiên cứu hàng đầu và các tổ chức quốc tế."
			partners={researchPartners}
		/>
	</Section>

	<Section background="secondary">
		<PartnerGrid
			title="Khách Hàng & <span class='text-accent'>Đối Tác</span>"
			partners={strategicPartners}
			disclaimer="IEACE đã cung cấp dịch vụ tự động hóa và năng lượng sạch cho các doanh nghiệp hàng đầu tại Việt Nam."
		/>
	</Section>
</Layout>

<style>
	.text-center {
		text-align: center;
	}
	.mb-lg {
		margin-bottom: var(--spacing-lg);
	}
	.mt-lg {
		margin-top: var(--spacing-lg);
	}
	.section-title {
		font-size: 2.5rem;
		margin-bottom: var(--spacing-md);
	}
</style>
