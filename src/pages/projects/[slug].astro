const { title, category, date, partner, description, details, image } =
  Astro.props;
---

<Layout title={`${title} | Project Spec`}>
  <Section className="project-header">
    <div class="breadcrumb">
      <a href="/projects">&larr; Quay lại danh sách dự án</a> / <span
        class="active">{title}</span
      >
    </div>

    <h1 class="project-title">{title}</h1>

    <div class="project-meta">
      {
        date && (
          <div class="meta-item">
            <span class="label">THỜI GIAN</span> {date}
          </div>
        )
      }
      <div class="meta-item">
        <span class="label">LĨNH VỰC</span>
        {category}
      </div>
    </div>
  </Section>

  <Section>
    <div class="project-grid">
      <div class="project-content">
        <div class="spec-card">
          <h3 class="spec-title">Tổng quan dự án</h3>
          <p class="spec-text">{description}</p>
        </div>

        <div class="spec-card">
          <h3 class="spec-title">Thông số & Quy mô</h3>
          <ul class="spec-list">
            {details.map((detail) => <li>{detail}</li>)}
          </ul>
        </div>
      </div>

      {
        image && (
          <div class="project-image">
            <div class="img-frame">
              <img src={image} alt={title} />
            </div>
            <div class="img-caption">Hình ảnh triển khai tại hiện trường</div>
          </div>
        )
      }
    </div>
  </Section>
</Layout>

<style>
  .project-header {
    padding-top: var(--spacing-xl);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--spacing-lg);
  }

  .breadcrumb {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .breadcrumb a:hover {
    color: var(--color-accent-primary);
  }

  .project-title {
    font-size: 3rem;
    margin-bottom: var(--spacing-lg);
  }

  .project-meta {
    display: flex;
    gap: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-md) 0;
    font-size: 0.9rem;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .label {
    color: var(--color-text-muted);
    font-size: 0.7rem;
  }

  .project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
  }

  @media (min-width: 900px) {
    .project-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .spec-card {
    margin-bottom: var(--spacing-lg);
  }

  .spec-title {
    font-size: 1rem;
    color: var(--color-accent-primary);
    margin-bottom: var(--spacing-sm);
  }

  .spec-text {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .spec-list li {
    margin-bottom: var(--spacing-sm);
    font-size: 1rem;
    position: relative;
    padding-left: 1.5rem;
    color: var(--color-text-muted);
  }

  .spec-list li::before {
    content: "•";
    position: absolute;
    left: 0;
    color: var(--color-accent-primary);
    font-weight: bold;
  }

  .bullet {
    color: var(--color-accent-primary);
    margin-right: 8px;
  }

  .img-frame {
    border: 1px solid var(--color-border);
    padding: 8px;
    background: white;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    border-radius: 4px;
    overflow: hidden;
  }

  .img-caption {
    margin-top: var(--spacing-sm);
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-align: right;
  }
</style>
