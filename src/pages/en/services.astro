---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/Section.astro";
import ServiceCardLg from "../../components/ServiceCardLg.astro";
---

<Layout title="Services & Research">
	<Section className="page-header">
		<div class="header-visual">
			<h1 class="page-title">
				Services & <span class="text-accent">Research</span>
			</h1>
			<p class="page-intro">
				We provide comprehensive technical solutions ranging from
				fundamental scientific research to real-world industrial
				application and strategic consulting.
			</p>
		</div>
	</Section>

	<Section>
		<div class="services-grid">
			<ServiceCardLg
				title="Green & Renewable Energy"
				description="Bridging scientific research with practical application. Design consulting for independent renewable energy clusters (Wind, Solar, Biogas...). Power supply for off-grid communities and charging stations."
				image="https://images.unsplash.com/photo-1509391366360-2e959784a276?auto=format&fit=crop&q=80&w=800"
				alt="Renewable Energy"
			/>

			<ServiceCardLg
				title="Automation & IoT/AI"
				description="Developing smart control algorithms. Digitizing transmission grids and optimizing energy consumption. Applying AI in predictive maintenance and industrial system operation."
				image="https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?auto=format&fit=crop&q=80&w=800"
				alt="Automation & AI"
			/>

			<ServiceCardLg
				title="Environment & Climate Change"
				description="Assessing environmental impacts (DTM/EIA) for industrial projects. Researching sustainable waste treatment solutions and monitoring climate change."
				image="https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&q=80&w=800"
				alt="Environment"
			/>

			<ServiceCardLg
				title="Green Transport & Agri-Machinery"
				description="Researching electric vehicles and charging station infrastructure. Developing smart agricultural machinery to mechanize farming and improve productivity."
				image="https://images.unsplash.com/photo-1593941707882-a5bba14938c7?auto=format&fit=crop&q=80&w=800"
				alt="Green Transport"
			/>
		</div>
	</Section>
</Layout>

<style>
	.page-header {
		padding-top: var(--spacing-xl);
		padding-bottom: var(--spacing-xl);
		text-align: center;
	}

	.page-title {
		font-size: 3.5rem;
		margin-bottom: var(--spacing-md);
		letter-spacing: -0.02em;
	}

	.page-intro {
		font-size: 1.2rem;
		color: var(--color-text-muted);
		max-width: 800px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 40px;
		margin-top: var(--spacing-lg);
	}

	@media (max-width: 900px) {
		.services-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
