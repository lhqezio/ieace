---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/Section.astro";
import Card from "../../components/Card.astro";
---

<Layout title="Services & Research">
	<Section className="page-header">
		<div class="header-visual">
			<h1 class="page-title">
				Services & <span class="text-accent">Research</span>
			</h1>
			<p class="page-intro">
				We provide comprehensive technical solutions ranging from
				fundamental scientific research to real-world industrial
				application and strategic consulting.
			</p>
		</div>
	</Section>

	<Section background="secondary">
		<div class="service-block">
			<div class="service-text">
				<h2 class="section-heading">Scientific Research</h2>
				<div class="service-item">
					<h3>Renewable Energy</h3>
					<p>
						High-level research and implementation of Solar, Wind,
						Hydropower, and Tidal energy systems. We focus on
						optimizing efficiency and nationwide grid integration.
					</p>
				</div>
				<div class="service-item">
					<h3>Automation & AI</h3>
					<p>Developing intelligent algorithms for:</p>
					<ul class="feature-list">
						<li>
							Energy consumption optimization and load balancing.
						</li>
						<li>
							Predictive maintenance for electrical systems to
							minimize downtime.
						</li>
						<li>
							Intelligent automation of industrial processes and
							control systems.
						</li>
					</ul>
				</div>
			</div>
			<div class="service-image">
				<img
					src="https://images.unsplash.com/photo-1509391366360-2e959784a276?auto=format&fit=crop&q=80&w=800"
					alt="Solar Energy Panels"
				/>
			</div>
		</div>
	</Section>

	<Section>
		<h2
			class="section-heading"
			style="text-align: center; margin-bottom: var(--spacing-xl);"
		>
			Tech Transfer & Industrial Services
		</h2>
		<div class="grid grid-3">
			<Card
				title="Industrial Testing"
				description="Rigorous manufacturing inspection for industrial systems, mechatronic equipment, and process control."
			/>
			<Card
				title="Technology Transfer"
				description="Bridging the gap by moving scientific research results into active production and operation environments."
			/>
			<Card
				title="Professional Training"
				description="Hosting scientific workshops, specialized seminars, and advanced technology training programs."
			/>
		</div>
	</Section>

	<Section background="secondary">
		<div class="service-block reverse">
			<div class="service-text">
				<h2 class="section-heading">Consulting & Design</h2>
				<div class="service-item">
					<h3>Design & Construction</h3>
					<p>
						Professional design and construction of technical
						systems for civil works, high-end office buildings, and
						modern industrial plants.
					</p>
				</div>
				<div class="service-item">
					<h3>AI Integration Consulting</h3>
					<p>
						Strategic advisory on integrating AI and automation
						technologies into existing infrastructure to drive
						efficiency and sustainability.
					</p>
				</div>
			</div>
			<div class="service-image">
				<img
					src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?auto=format&fit=crop&q=80&w=800"
					alt="Modern Architecture & Consulting"
				/>
			</div>
		</div>
	</Section>
</Layout>

<style>
	.page-header {
		padding-top: var(--spacing-xl);
		padding-bottom: var(--spacing-xl);
	}

	.page-title {
		font-size: 4rem;
		margin-bottom: var(--spacing-md);
		letter-spacing: -0.03em;
	}

	.page-intro {
		font-size: 1.25rem;
		color: var(--color-text-muted);
		max-width: 700px;
		line-height: 1.6;
	}

	.section-heading {
		font-size: 0.85rem;
		text-transform: uppercase;
		color: var(--color-accent-primary);
		letter-spacing: 0.1em;
		margin-bottom: var(--spacing-lg);
		display: block;
		font-weight: 700;
	}

	.service-block {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-xl);
		align-items: center;
	}

	.service-block.reverse {
		direction: rtl;
	}

	.service-block.reverse > * {
		direction: ltr;
	}

	@media (max-width: 900px) {
		.service-block {
			grid-template-columns: 1fr;
		}
		.service-block.reverse {
			direction: ltr;
		}
	}

	.service-item {
		margin-bottom: var(--spacing-xl);
	}

	.service-item h3 {
		font-size: 1.8rem;
		margin-bottom: var(--spacing-sm);
		color: var(--color-text);
		position: relative;
		display: inline-block;
	}

	.service-item h3::after {
		content: "";
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 40px;
		height: 3px;
		background: var(--color-accent-primary);
	}

	.service-item p {
		color: var(--color-text-muted);
		font-size: 1.1rem;
		line-height: 1.6;
	}

	.feature-list {
		list-style: none;
		padding: 0;
		margin-top: var(--spacing-md);
	}

	.feature-list li {
		position: relative;
		padding-left: 1.5rem;
		margin-bottom: 0.8rem;
		color: var(--color-text-muted);
	}

	.feature-list li::before {
		content: "â†’";
		position: absolute;
		left: 0;
		color: var(--color-accent-primary);
		font-family: var(--font-mono);
	}

	.service-image {
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
		border: 1px solid var(--color-border);
	}

	.service-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
		transition: transform 0.5s ease;
	}

	.service-image:hover img {
		transform: scale(1.05);
	}
</style>
