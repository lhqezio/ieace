---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Section from "../../components/Section.astro";
import Card from "../../components/Card.astro";
import Mission from "../../components/Mission.astro";
import ResearchPartners from "../../components/ResearchPartners.astro";
import PartnerGrid from "../../components/PartnerGrid.astro";
import NoticeBanner from "../../components/NoticeBanner.astro";

const projects = [
    {
        title: "Hon Chuoi Energy Cluster",
        description:
            "Seawater desalination and independent power supply for island residents.",
        image: "https://images.unsplash.com/photo-1548179504-07be08162fc3?auto=format&fit=crop&q=80&w=800",
        href: "/en/projects/hon-chuoi-ca-mau",
    },
    {
        title: "Wind - Solar Hybrid System",
        description:
            "Renewable energy hybrid system providing power for vehicle charging clusters.",
        image: "https://images.unsplash.com/photo-1466611653911-95081537e5b7?auto=format&fit=crop&q=80&w=800",
        href: "/en/projects/phu-cuong-hybrid",
    },
    {
        title: "HUST Research Collaboration",
        description:
            "Joint research on AI application in energy technology with Hanoi University.",
        image: "https://images.unsplash.com/photo-1531482615713-2afd69097998?auto=format&fit=crop&q=80&w=800",
        href: "/en/projects/hust-research",
    },
    {
        title: "Vocational Training",
        description:
            "Providing renewable energy training systems for various vocational centers.",
        image: "/images/project-training.jpg",
        href: "/en/projects/vocational-training",
    },
];

const researchPartners = [
    {
        name: "HUST",
        url: "https://hust.edu.vn",
        logo: "/images/partners/research/hust.png",
    },
    {
        name: "CEC China",
        url: "https://english.cec.org.cn/#/",
        logo: "/images/partners/research/cec.webp",
    },
    {
        name: "VIAEP",
        url: "https://viaep.org.vn",
        logo: "/images/partners/research/viaep.png",
    },
    {
        name: "VNUA",
        url: "https://vnua.edu.vn",
        logo: "/images/partners/research/vnua.png",
    },
];

const strategicPartners = [
    { name: "Panasonic", logo: "/images/partners/panasonic.svg" },
    { name: "Schneider Electric", logo: "/images/partners/schneider.svg" },
    { name: "Kyocera", logo: "/images/partners/kyocera.svg" },
    { name: "Viettel", logo: "/images/partners/viettel.svg" },
    { name: "Canon", logo: "/images/partners/canon.svg" },
    { name: "Mitsubishi", logo: "/images/partners/mitsubishi.svg" },
    { name: "Techco", logo: "/images/partners/techco.svg" },
    { name: "Nanotech", logo: "/images/partners/nanotech.svg" },
];
---

<Layout title="Home">
    <Hero
        title="TURN ON YOUR LIFE"
        subtitle="Scientific research and technology unit under the Vietnam Union of Science and Technology Associations (VUSTA). Pioneering Digital Transformation - Green Energy - Automation - AI."
        primaryBtnText="Our Projects"
        primaryBtnLink="/en/projects"
        secondaryBtnText="Contact Institute"
        secondaryBtnLink="/en/contact"
    />

    <NoticeBanner
        badgeText="NOTICE"
        title="System Update in Progress"
        message="We are currently refreshing our brand identity and updating the site with actual project photos. Thank you for your patience."
        ctaText="CONTACT FOR DETAILS"
        ctaLink="/en/contact"
    />

    <Section>
        <Mission
            title="Pioneering <span class='text-accent'>Mission</span>"
            description="IEACE is a pioneering scientific research unit, committed to digital transformation and green energy development, applying automation, IoT, and AI technologies to build smart, sustainable green agriculture."
            stats={[
                { value: "A-1128", label: "Operating License" },
                { value: "2013", label: "Founded Year" },
            ]}
            experienceNumber="10+"
            experienceText="Years Development"
        />
    </Section>

    <Section background="secondary">
        <div class="row text-center mb-lg">
            <h2 class="section-title">
                Latest <span class="text-accent">Projects</span>
            </h2>
            <div class="section-disclaimer">
                <p>
                    * We are currently rebranding. The site is being updated
                    with actual project photos. Thank you for your patience.
                </p>
                <a href="/en/contact" class="disclaimer-cta"
                    >CONTACT FOR DETAILS</a
                >
            </div>
        </div>
        <div class="grid grid-3">
            {
                projects
                    .slice(0, 3)
                    .map((project) => (
                        <Card
                            title={project.title}
                            description={project.description}
                            href={project.href}
                            category="PROJECT"
                        />
                    ))
            }
        </div>
        <div class="text-center mt-lg">
            <a href="/en/projects" class="btn btn-outline">View All Projects</a>
        </div>
    </Section>

    <Section>
        <ResearchPartners
            title="Research & <span class='text-accent'>Development Partners</span>"
            description="Collaborating with leading universities, research institutes, and international organizations."
            partners={researchPartners}
        />
    </Section>

    <Section background="secondary">
        <PartnerGrid
            title="Clients & <span class='text-accent'>Partners</span>"
            partners={strategicPartners}
            disclaimer="IEACE has provided automation and clean energy services to leading enterprises in Vietnam."
        />
    </Section>
</Layout>

<style>
    .text-center {
        text-align: center;
    }
    .mb-lg {
        margin-bottom: var(--spacing-lg);
    }
    .mt-lg {
        margin-top: var(--spacing-lg);
    }
    .section-title {
        font-size: 2.5rem;
        margin-bottom: var(--spacing-md);
    }
</style>
