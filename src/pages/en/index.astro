---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Section from "../../components/Section.astro";
import Card from "../../components/Card.astro";
import Mission from "../../components/Mission.astro";
import ResearchPartners from "../../components/ResearchPartners.astro";
import PartnerGrid from "../../components/PartnerGrid.astro";

const projects = [
    {
        title: "South Africa Mega-Project",
        description:
            "IEACE signs partnership for â‚¬6 Billion Farm City project in South Africa.",
        image: "https://images.unsplash.com/photo-1500382017468-9049fed747ef?auto=format&fit=crop&q=80&w=800",
        href: "/en/projects/south-africa-farm-city",
    },
    {
        title: "Viettel Solar Power",
        description:
            "Installation of 3.45KW and 1.5KW solar power systems for BTS stations.",
        image: "/images/project-solar.jpg",
        href: "/en/projects/viettel-solar",
    },
    {
        title: "Thanh Hoa Urban Development",
        description:
            "Renewable energy system development for Socio-Economic Comprehensive Development Project.",
        image: "/images/project-urban.jpg",
        href: "/en/projects/thanh-hoa-urban",
    },
    {
        title: "Vocational Training Equipment",
        description:
            "Supply of renewable energy systems for Lai Chau, Soc Son, and Thai Nguyen centers.",
        image: "/images/project-training.jpg",
        href: "/en/projects/vocational-training",
    },
];

const researchPartners = [
    {
        name: "HUST",
        url: "https://hust.edu.vn",
        logo: "/images/partners/research/hust.png",
    },
    {
        name: "CEC China",
        url: "https://english.cec.org.cn/#/",
        logo: "/images/partners/research/cec.webp",
    },
    {
        name: "VIAEP",
        url: "https://viaep.org.vn",
        logo: "/images/partners/research/viaep.png",
    },
    {
        name: "VNUA",
        url: "https://vnua.edu.vn",
        logo: "/images/partners/research/vnua.png",
    },
];

const strategicPartners = [
    { name: "Panasonic", logo: "/images/partners/panasonic.svg" },
    { name: "Schneider Electric", logo: "/images/partners/schneider.svg" },
    { name: "Kyocera", logo: "/images/partners/kyocera.svg" },
    { name: "Viettel", logo: "/images/partners/viettel.svg" },
    { name: "Canon", logo: "/images/partners/canon.svg" },
    { name: "Mitsubishi", logo: "/images/partners/mitsubishi.svg" },
    { name: "Techco", logo: "/images/partners/techco.svg" },
    { name: "Nanotech", logo: "/images/partners/nanotech.svg" },
];
---

<Layout title="Home">
    <Hero
        title="TURN ON YOUR LIFE"
        subtitle="Scientific research and technology unit under the Vietnam Union of Science and Technology Associations (VUSTA). Pioneering Digital Transformation - Green Energy - Automation - AI."
        primaryBtnText="Our Projects"
        primaryBtnLink="/en/projects"
        secondaryBtnText="Contact Institute"
        secondaryBtnLink="/en/contact"
    />

    <Section>
        <Mission
            title="Pioneering <span class='text-accent'>Mission</span>"
            description="IEACE is a pioneering scientific research unit, committed to digital transformation and green energy development, applying automation, IoT, and AI technologies to build smart, sustainable green agriculture."
            stats={[
                { value: "A-1128", label: "Operating License" },
                { value: "2013", label: "Founded Year" },
            ]}
            experienceNumber="10+"
            experienceText="Years Development"
        />
    </Section>

    <Section background="secondary">
        <div class="row text-center mb-lg">
            <h2 class="section-title">
                Latest <span class="text-accent">Projcets</span>
            </h2>
        </div>
        <div class="grid grid-3">
            {
                projects
                    .slice(0, 3)
                    .map((project) => (
                        <Card
                            title={project.title}
                            description={project.description}
                            href={project.href}
                            category="PROJECT"
                        />
                    ))
            }
        </div>
        <div class="text-center mt-lg">
            <a href="/en/projects" class="btn btn-outline">View All Projects</a>
        </div>
    </Section>

    <Section>
        <ResearchPartners
            title="Research & <span class='text-accent'>Development Partners</span>"
            description="Collaborating with leading universities, research institutes, and international organizations."
            partners={researchPartners}
        />
    </Section>

    <Section background="secondary">
        <PartnerGrid
            title="Strategic <span class='text-accent'>Partners</span>"
            partners={strategicPartners}
        />
    </Section>
</Layout>

<style>
    .text-center {
        text-align: center;
    }
    .mb-lg {
        margin-bottom: var(--spacing-lg);
    }
    .mt-lg {
        margin-top: var(--spacing-lg);
    }
    .section-title {
        font-size: 2.5rem;
        margin-bottom: var(--spacing-md);
    }
</style>
