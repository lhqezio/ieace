---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/Section.astro";
---

<Layout title="Contact">
    <Section className="page-header">
        <h1 class="page-title">
            Contact <span class="text-accent">Us</span>
        </h1>
        <p class="page-intro">
            Connect with IEACE for strategic consulting, research collaboration,
            or technical inquiries regarding renewable energy and automation
            solutions.
        </p>
    </Section>

    <Section background="secondary" className="contact-info-section">
        <div class="contact-grid simplified">
            <div class="contact-main">
                <div class="contact-card">
                    <div class="contact-header">
                        <h2 class="section-heading">HEADQUARTERS</h2>
                        <div class="institutional-line"></div>
                    </div>
                    <div class="info-group">
                        <div class="info-item">
                            <h4 class="info-label">Office Address</h4>
                            <p>Hamlet 2, Van Phuc, Thanh Tri, Hanoi, Vietnam</p>
                        </div>
                        <div class="info-item">
                            <h4 class="info-label">Transaction Office</h4>
                            <p>
                                Room 401, No. 1 Do Hanh, Hai Ba Trung Dist,
                                Hanoi
                            </p>
                        </div>
                    </div>
                </div>

                <div class="sidebar-card">
                    <h4 class="sidebar-title">DIGITAL CHANNELS</h4>
                    <ul class="contact-links">
                        <li>
                            <span class="link-label">Phone:</span>
                            <a href="tel:0436342875">043.6342875</a>
                        </li>
                        <li>
                            <span class="link-label">Fax:</span>
                            043.6340503
                        </li>
                        <li>
                            <span class="link-label">Email:</span>
                            <a href="mailto:lehongnam@gmail.com"
                                >lehongnam@gmail.com</a
                            >
                        </li>
                    </ul>
                </div>

                <div class="sidebar-card">
                    <h4 class="sidebar-title">OFFICE HOURS</h4>
                    <p class="sidebar-text">Mon - Fri: 08:30 - 17:30</p>
                    <p class="sidebar-text">Sat: 08:30 - 12:00</p>
                </div>
            </div>

            <div class="contact-sidebar">
                <div class="map-visual">
                    <div class="map-placeholder">
                        <div class="map-dot"></div>
                        <div class="map-label">IEACE HQ</div>
                    </div>
                    <p class="map-caption">Hanoi metropolitan area, Vietnam</p>
                </div>

                <div class="institutional-badge">
                    <div class="badge-content">
                        <div class="badge-logo">IEACE</div>
                        <div class="badge-tag">
                            Institute of Automation and Clean Energy
                        </div>
                        <p class="badge-affiliation">Affiliated with VUSTA</p>
                    </div>
                </div>
            </div>
        </div>
    </Section>
</Layout>

<style>
    .page-title {
        font-size: 3rem;
        margin-bottom: var(--spacing-md);
        font-weight: 800;
        color: var(--color-text);
    }

    .page-intro {
        font-size: 1.15rem;
        color: var(--color-text-muted);
        max-width: 650px;
        line-height: 1.6;
    }

    .contact-info-section {
        padding: var(--spacing-xl) 0;
    }

    .contact-card {
        background: #ffffff;
        border: 1px solid var(--color-border);
        padding: var(--spacing-xl);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.03);
        border-radius: 8px;
    }

    .contact-header {
        margin-bottom: var(--spacing-xl);
    }

    .section-heading {
        font-size: 1.5rem;
        color: var(--color-text);
        margin-bottom: var(--spacing-sm);
    }

    .institutional-line {
        width: 60px;
        height: 3px;
        background: var(--color-accent-primary);
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 340px;
        gap: var(--spacing-xl);
        align-items: flex-start;
    }

    @media (max-width: 1000px) {
        .contact-grid {
            grid-template-columns: 1fr;
        }
    }

    .contact-main {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-lg);
    }

    .contact-card,
    .sidebar-card {
        background: #ffffff;
        border: 1px solid var(--color-border);
        padding: var(--spacing-xl);
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.02);
    }

    .contact-sidebar {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-lg);
    }

    .sidebar-title {
        font-size: 0.9rem;
        font-weight: 800;
        color: var(--color-accent-primary);
        margin-bottom: var(--spacing-sm);
        letter-spacing: 0.05em;
    }

    .sidebar-text {
        font-size: 1rem;
        margin-bottom: 4px;
        color: var(--color-text-muted);
    }

    .contact-links {
        list-style: none;
        padding: 0;
    }

    .contact-links li {
        margin-bottom: 8px;
        font-size: 1rem;
    }

    .link-label {
        font-weight: 700;
        margin-right: 5px;
    }

    .contact-links a {
        color: var(--color-text);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .contact-links a:hover {
        color: var(--color-accent-primary);
    }

    .map-visual {
        background: #f8fafc;
        border: 1px solid var(--color-border);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
    }

    .map-placeholder {
        height: 180px;
        background-color: #e2e8f0;
        border-radius: 8px;
        position: relative;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-image: radial-gradient(
            circle at 50% 50%,
            rgba(5, 150, 105, 0.1) 0%,
            transparent 60%
        );
    }

    .map-dot {
        width: 12px;
        height: 12px;
        background: var(--color-accent-primary);
        border-radius: 50%;
        position: relative;
    }

    .map-dot::after {
        content: "";
        position: absolute;
        inset: -10px;
        border: 2px solid var(--color-accent-primary);
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
            opacity: 0.8;
        }
        100% {
            transform: scale(2.5);
            opacity: 0;
        }
    }

    .map-label {
        position: absolute;
        top: 45%;
        left: 55%;
        font-size: 0.75rem;
        font-weight: 800;
        background: white;
        padding: 2px 8px;
        border-radius: 4px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .map-caption {
        font-size: 0.8rem;
        color: var(--color-text-muted);
    }

    .institutional-badge {
        background: var(--color-surface);
        padding: var(--spacing-lg);
        border: 1px solid var(--color-border);
        border-radius: 12px;
        text-align: center;
    }

    .badge-logo {
        font-size: 1.5rem;
        font-weight: 900;
        color: var(--color-accent-primary);
        margin-bottom: 0.5rem;
    }

    .badge-tag {
        font-size: 0.8rem;
        font-weight: 700;
        color: var(--color-text);
        margin-bottom: 0.25rem;
    }

    .badge-affiliation {
        font-size: 0.7rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }
</style>
