---
interface Props {
    title: string;
    partners: {
        name: string;
        logo: string;
    }[];
    disclaimer?: string;
}

const { title, partners, disclaimer } = Astro.props;
---

<section class="partners-section">
    <div class="row text-center mb-lg">
        <h2 class="section-title" set:html={title} />
    </div>
    <div class="partners-grid">
        {
            partners.map((partner) => (
                <div class="partner-logo">
                    <img src={partner.logo} alt={partner.name} />
                </div>
            ))
        }
    </div>
    {
        disclaimer && (
            <div class="partners-disclaimer">
                <p>{disclaimer}</p>
            </div>
        )
    }
</section>

<style>
    .partners-section {
        padding: var(--spacing-xl) 0;
    }
    .text-center {
        text-align: center;
    }
    .mb-lg {
        margin-bottom: var(--spacing-lg);
    }
    .section-title {
        font-size: 2.5rem;
        margin-bottom: var(--spacing-md);
    }
    .partners-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: var(--spacing-xl);
        align-items: center;
    }
    .partner-logo {
        width: 140px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.6;
        transition: all 0.3s ease;
    }
    .partner-logo img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }
    .partner-logo:hover {
        filter: none;
        opacity: 1;
        transform: scale(1.05);
    }
    .partners-disclaimer {
        margin-top: var(--spacing-lg);
        text-align: center;
        color: var(--color-text-muted);
        font-size: 0.9rem;
        font-style: italic;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    @media (max-width: 768px) {
        .partner-logo {
            opacity: 1;
        }
    }
</style>
