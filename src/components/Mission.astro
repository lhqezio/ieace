---
interface Props {
    title: string;
    description: string;
    stats: {
        value: string;
        label: string;
    }[];
    experienceNumber: string;
    experienceText: string;
}

const { title, description, stats, experienceNumber, experienceText } =
    Astro.props;
---

<section class="mission-section">
    <div class="mission-grid">
        <div class="mission-text">
            <h2 class="section-title" set:html={title} />
            <p class="section-desc">
                {description}
            </p>
            <div class="mission-stats mt-lg">
                {
                    stats.map((stat) => (
                        <div class="stat-card">
                            <span class="stat-num">{stat.value}</span>
                            <span class="stat-label">{stat.label}</span>
                        </div>
                    ))
                }
            </div>
        </div>
        <div class="mission-image-wrapper">
            <div class="mission-visual-container">
                <div class="mission-image">
                    <img
                        src="https://images.unsplash.com/photo-1518770660439-4636190af475?auto=format&fit=crop&q=80&w=800"
                        alt="Technology"
                    />
                    <div class="image-overlay"></div>
                </div>
                <div class="visual-deco-lines">
                    <div class="deco-line"></div>
                    <div class="deco-line"></div>
                    <div class="deco-line"></div>
                </div>
            </div>
            <div class="experience-badge deluxe">
                <div class="badge-inner">
                    <span class="badge-number">{experienceNumber}</span>
                    <span class="badge-text">{experienceText}</span>
                </div>
                <div class="badge-corner"></div>
            </div>
        </div>
    </div>
</section>

<style>
    .mission-section {
        padding: var(--spacing-xl) 0;
    }
    .mt-lg {
        margin-top: var(--spacing-lg);
    }
    .section-title {
        font-size: 2.5rem;
        margin-bottom: var(--spacing-md);
    }
    .section-desc {
        font-size: 1.1rem;
        color: var(--color-text-muted);
        line-height: 1.6;
        margin-bottom: var(--spacing-md);
    }
    .mission-grid {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: var(--spacing-xl);
        align-items: center;
    }
    @media (max-width: 900px) {
        .mission-grid {
            grid-template-columns: 1fr;
        }
    }
    .mission-image-wrapper {
        position: relative;
        padding: 20px;
    }
    .mission-image {
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid var(--color-border);
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.1);
        position: relative;
        aspect-ratio: 4/3;
    }
    .image-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.4), transparent);
    }
    .experience-badge.deluxe {
        position: absolute;
        bottom: 0;
        left: 0;
        background: var(--color-text);
        color: white;
        padding: 35px;
        border-radius: 4px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        transform: translate(-10%, -10%);
        z-index: 2;
        border-left: 4px solid var(--color-accent-primary);
    }
    .badge-corner {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 15px;
        height: 15px;
        border-top: 2px solid rgba(255, 255, 255, 0.2);
        border-right: 2px solid rgba(255, 255, 255, 0.2);
    }
    .mission-visual-container {
        position: relative;
    }
    .visual-deco-lines {
        position: absolute;
        top: -20px;
        right: -20px;
        width: 100px;
        height: 100px;
        z-index: -1;
    }
    .visual-deco-lines .deco-line {
        position: absolute;
        background: var(--color-accent-primary);
        opacity: 0.2;
    }
    .visual-deco-lines .deco-line:nth-child(1) {
        top: 0;
        right: 0;
        width: 100%;
        height: 2px;
    }
    .visual-deco-lines .deco-line:nth-child(2) {
        top: 0;
        right: 0;
        width: 2px;
        height: 100%;
    }
    .visual-deco-lines .deco-line:nth-child(3) {
        top: 20px;
        right: 20px;
        width: 60%;
        height: 60%;
        border: 1px solid var(--color-accent-primary);
        background: transparent;
    }
    .badge-number {
        font-size: 2.8rem;
        font-weight: 900;
        line-height: 1;
        margin-bottom: 5px;
        color: var(--color-accent-primary);
    }
    .badge-text {
        font-size: 0.75rem;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 0.15em;
        white-space: nowrap;
        opacity: 0.8;
    }
    .stat-card {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        padding: var(--spacing-lg);
        border-radius: 8px;
        flex: 1;
        transition:
            transform 0.3s ease,
            border-color 0.3s ease;
    }
    .stat-card:hover {
        transform: translateY(-5px);
        border-color: var(--color-accent-primary);
    }
    .stat-num {
        display: block;
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--color-accent-primary);
    }
    .stat-label {
        font-size: 0.8rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }
    .mission-stats {
        display: flex;
        gap: var(--spacing-md);
        flex-wrap: wrap;
    }

    @media (max-width: 600px) {
        .experience-badge.deluxe {
            padding: 20px;
            transform: translate(0, 0);
            position: relative;
            margin-top: -40px;
            width: fit-content;
            left: 50%;
            transform: translateX(-50%);
        }

        .stat-card {
            width: 100%;
        }
    }
</style>
