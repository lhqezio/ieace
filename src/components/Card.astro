---
interface Props {
    title: string;
    description?: string;
    href?: string;
    image?: string;
    date?: string;
    category?: string;
    partnerLogo?: string;
}

const { title, description, href, image, date, category, partnerLogo } =
    Astro.props;
const Tag = href ? "a" : "div";
---

<Tag href={href} class="card tech-card">
    {
        image && (
            <div class="card-image-wrapper">
                <img
                    src={image}
                    alt={title}
                    loading="lazy"
                    class="card-image"
                />
                {category && <span class="card-badge">{category}</span>}
            </div>
        )
    }
    <div class="card-content">
        <div class="card-header">
            <h3 class="card-title">{title}</h3>
            {date && <span class="card-date">{date}</span>}
        </div>
        {description && <p class="card-desc">{description}</p>}

        <div class="card-footer">
            {
                partnerLogo && (
                    <div class="partner-badge">
                        <span class="partner-label">Khách hàng:</span>
                        <img
                            src={partnerLogo}
                            alt="Partner"
                            class="partner-img"
                        />
                    </div>
                )
            }
            <span class="tech-link">Chi tiết &rarr;</span>
        </div>
    </div>
</Tag>

<style>
    .card {
        display: flex;
        flex-direction: column;
        background-color: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        overflow: hidden;
        height: 100%;
        transition: all 0.3s ease;
        position: relative;
        text-decoration: none;
    }

    .card:hover {
        transform: translateY(-4px);
        border-color: var(--color-accent-primary);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    }

    .card-image-wrapper {
        position: relative;
        width: 100%;
        aspect-ratio: 16/9;
        background-color: #f8fafc;
        overflow: hidden;
    }

    .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .card:hover .card-image {
        transform: scale(1.05);
    }

    .card-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: var(--color-accent-primary);
        color: white;
        padding: 4px 12px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border-radius: 4px;
        box-shadow: 0 2px 8px rgba(5, 150, 105, 0.3);
    }

    .card-content {
        padding: var(--spacing-lg);
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .card-header {
        margin-bottom: var(--spacing-sm);
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--color-text);
        margin-bottom: 4px;
        line-height: 1.4;
    }

    .card-date {
        font-size: 0.8rem;
        color: var(--color-text-muted);
        display: block;
        font-weight: 500;
    }

    .card-desc {
        color: var(--color-text-muted);
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: var(--spacing-lg);
        flex-grow: 1;
    }

    .card-footer {
        border-top: 1px solid var(--color-border);
        padding-top: var(--spacing-md);
        margin-top: auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .partner-badge {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .partner-label {
        font-size: 0.7rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        font-weight: 600;
    }

    .partner-img {
        height: 24px;
        width: auto;
        opacity: 0.8;
    }

    .tech-link {
        font-size: 0.85rem;
        color: var(--color-accent-primary);
        font-weight: 700;
        transition: transform 0.2s ease;
    }

    .card:hover .tech-link {
        transform: translateX(4px);
    }
</style>
